@model AddressBook.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Create a new account.</h2>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserLogin)
                @Html.TextBoxFor(m => m.UserLogin)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>

            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.UserSurname)
                @Html.TextBoxFor(m => m.UserSurname)
            </li>
            <li>
                @Html.LabelFor(m => m.UserMidName)
                @Html.TextBoxFor(m => m.UserMidName)
            </li>
            <li>
                @Html.LabelFor(m => m.UserEmail)
                @Html.TextBoxFor(m => m.UserEmail)
            </li>
            <li>
                @Html.LabelFor(m => m.UserPhoneNumber)
                @Html.TextBoxFor(m => m.UserPhoneNumber)
            </li>
            <li>
                @Html.LabelFor(m => m.UserComment)
                @Html.TextAreaFor(m => m.UserComment)
            </li>
        </ol>
        <input type="submit" value="Register" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
