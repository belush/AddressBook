<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Книжный Магазин</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink(Resources.Resource.SiteName, "Index", "Contact")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>*@
                            <li>@Html.ActionLink("Контакты", "Index", "Contact")</li>
                            <li>@Html.ActionLink("Группы", "Index", "ContactType")</li>
                            <li>@Html.ActionLink(Resources.Resource.EnterAsAdmin, "LoginAsAdmin", "Temp")</li>
                        </ul>
                    </nav>
                    @using (Html.BeginForm("ChangeCulture", "Home"))
                    {
                        <select name="lang">
                            @*<option disabled selected>@Resources.Resource.ChangeLang</option>*@
                            <option value="ru">Русский</option>
                            <option value="en">English</option>
                        </select>
                        <input type="submit" name="submit" value="@Resources.Resource.ChangeLang">
                    }
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
